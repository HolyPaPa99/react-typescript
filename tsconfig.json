{
	"compilerOptions": {
		"target": "es5",
		"lib": [
			"dom",
			"dom.iterable",
			"esnext"
		],
		"paths": {
			"@src/*": [
				"./src/*"
			],
			"@Apis/*": [
				"./src/Apis/*"
			],
			"@Common/*": [
				"./src/Common/*"
			],
			"@Components/*": [
				"./src/Components/*"
			],
			"@Configurations/*": [
				"./src/Configurations/*"
			],
			"@Models/*": [
				"./src/Models/*"
			],
			"@Styles/*": [
				"./src/Styles/*"
			],
			"@ViewModels/*": [
				"./src/ViewModels/*"
			],
			"@Views/*": [
				"./src/Views/*"
			],
		},
		"allowJs": true,
		"skipLibCheck": true,
		"esModuleInterop": true,
		"allowSyntheticDefaultImports": true,
		"strict": true,
		"forceConsistentCasingInFileNames": true,
		"noFallthroughCasesInSwitch": true,
		"module": "esnext",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"noEmit": true,
		"useDefineForClassFields": true,
		"experimentalDecorators": true,
		"jsx": "react-jsx"
	},
	"include": [
		"src"
	],
}